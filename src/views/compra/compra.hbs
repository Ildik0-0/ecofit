<link href="/css/addpro.css" rel="stylesheet">

<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Compra  /compra Producto</h2>

              <form action="/compra/edit/{{compra.id}}"  method="POST"  onSubmit="return cant()">
                 
                <div class="form-outline mb-4">               
                    <label>Nombre Producto: </label>
                    <input "form-label" for="form3Example3cg" name="nom_producto" value="{{{compra.nom_producto}}}" readonly onmousedown="return false;"  >
                </div>

                <div class="form-outline mb-4">
                  <label>Precio : </label>
                  <input class="form-label" for="form3Example3cg" name="precio_producto" value="{{{compra.precio_producto}}}" readonly onmousedown="return false;" >
                </div>

                <div class="form-outline mb-4">
                
                  <label class="form-label" for="form3Example4cg" name="tipo_producto" value="{{{compra.tipo_producto}}}">Tipo De Metal :{{{compra.tipo_producto}}} </label>
                </div>

                <div class="form-outline mb-4">
                  <input type="number" id="cantidad" name="nomstock" >
                  <span id="cantOK"></span>

                  <input class="form-label" for="form3Example4cdg" type="number" name="stock_producto" value="{{{compra.stock_producto}}}" readonly onmousedown="return false;">Stock Actual:{{{compra.stock_producto}}} kg 
                </div>
              
               

                

                <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Compra</button>
                </div>

                 
            
              </form>
    
           
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

