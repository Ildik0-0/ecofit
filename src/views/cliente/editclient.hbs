            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registro Del Cliente</h3>

            <form class="px-md-2" action="/cliente/edit/{{editcliente.id}}" method="POST">

              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control"  value="{{editcliente.nom_cliente}}" name="nom_cliente" />
                <label class="form-label" for="form3Example1q">Nombre</label>
              </div>
              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" value="{{editcliente.apellido_cliente}}" name="apellido_cliente"/>
                <label class="form-label" for="form3Example1q">Apellido</label>
              </div>

              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" value="{{editcliente.rut_cliente}}" name="rut_cliente"/>
                <label class="form-label" for="form3Example1q">Rut</label>
              </div>

              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" value="{{editcliente.telefono_cliente}}" name="telefono_cliente"/>
                <label class="form-label" for="form3Example1q">Numero Celular</label>
              </div>

              <div class="form-outline mb-4">
                <input type="email" id="form3Example1q" class="form-control" value="{{editcliente.email_cliente}}" name=" email_cliente"/>
                <label class="form-label" for="form3Example1q">Correo</label>
              </div>

              <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" value="{{editcliente.direccion_cliente}}" name="direccion_cliente"/>
                <label class="form-label" for="form3Example1q">Direcci√≥n</label>
              </div>

               <div class="form-outline mb-4">
                <input type="text" id="form3Example1q" class="form-control" value="{{editcliente.contacto_cliente}}" name="contacto_cliente"/>
                <label class="form-label" for="form3Example1q">Nombre del Contacto</label>
              </div>

              <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>