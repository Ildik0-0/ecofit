<div class="container p-4" >

    

    <div class="row">

         

            {{#each viewproducto}}

                <div class="col-md-3" style="width: 18rem;">
                   
                    <div class="card-text-center">
                        <div class="card-body border">                           
                               
                                <div class="card-body">
                                   <img src="/img/aluminio.jpg" width="50" class="card-img-top" alt="imagen que no tengo">
                                    <h3 class="card-title">
                                        {{nom_producto}}
                                    </h3>
                                    <p class="card-text">
                                         Precio: ${{precio_producto}}
                                    </p>
                                    <p class="card-text" >
                                        Stock: {{stock_producto}}Kg
                                    </p>
                                    <p class="card-text">
                                         Descripcion: {{descripcion}}
                                    </p>
                                    <a href="/producto/delete/{{id}}" class="btn btn-danger">Borrar</a>
                                   <a href="/producto/edit/{{id}}" class="btn btn-primary">Editar</a>
                                </div>    
                        
                        </div>          
                        
                    
                    </div>   
                </div>

                

            {{else}}
            <div class="col-md-4 mx-auto" >
                <div class="card card-body text-center">
                    <p> No existen productos guardados </p>
                    <a href="/producto/addpro"> Crear Producto!</a>
                </div>
            </div>

            {{/each}}

    </div>

   


</div>